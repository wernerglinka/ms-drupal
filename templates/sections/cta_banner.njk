{% from "../partials/ctas.njk" import ctas %}
{% from "../partials/text.njk" import text %}

{# this section receives props params and site #}

<section 
  class="section-cta-banner {% if params.hasTopPadding %}hasTopPadding{% endif %} {% if params.hasBottomPadding %}hasBottomPadding{% endif %} {% if params.colorIsDark %}isDark{% endif %}"
  style="{% if params.backgroundColor %}background-color: {{ params.backgroundColor }};{% endif %}"
>
  <div class="content">
    {% set info = params %}
    {{ text(info.text) }}

    {% if info.hasCtas %}
      {{ ctas(info.ctas) }}
    {% endif %}
  </div>
</section>